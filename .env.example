JWT_SECRET=your-random-secret-key-here-min-32-characters
JWT_EXPIRES_IN=24h
DATABASE_URL="postgresql://username:password@localhost:5432/housemajor?schema=public"
PORT=3009
NODE_ENV=development

# Email Configuration (for production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@housemajor.com

# Frontend URL (for password reset links and OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3009/auth/google/callback

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AI Services Configuration
# Embedding provider: "cloudflare" (default) or "ollama" (local)
AI_EMBEDDING_PROVIDER=cloudflare
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
AI_EMBEDDING_MODEL=@cf/baai/bge-base-en-v1.5
# For local development with Ollama, set:
# AI_EMBEDDING_PROVIDER=ollama
# AI_EMBEDDING_URL=http://localhost:8085/embeddings
# AI_EMBEDDING_MODEL=nomic-embed-text

# Transcription
AI_TRANSCRIBE_URL=http://localhost:8084/transcribe
AI_TRANSCRIBE_MODEL=large-v3
AI_HTTP_TIMEOUT=120000